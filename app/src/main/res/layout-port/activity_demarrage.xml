<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aerophile.app.DemarrageActivity"
    android:gravity="center_horizontal">

    <!-- Prevent Auto-Focus -->
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal"
        android:layout_width="0px"
        android:layout_height="0px"
        android:id="@+id/linearLayout"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollDemarrage"
        android:layout_alignParentLeft="false"
        android:layout_alignParentEnd="false" android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:rowCount="11"
                android:useDefaultMargins="true"
                android:id="@+id/gridDemarrage"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textDate"
                    android:text="@string/demarrage_date"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:layout_column="0"
                    android:layout_row="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/demarrage_date_holder"
                    android:id="@+id/textDateHolder"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textColor="#000000" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demarrage_date_change"
                    android:id="@+id/buttonDate"
                    android:layout_row="0"
                    android:layout_column="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/demarrage_lms"
                    android:id="@+id/textLms"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:layout_row="1"
                    android:layout_column="0" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkLms"
                    android:enabled="true"
                    android:checked="false"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_columnSpan="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/demarrage_lift"
                    android:id="@+id/textLift"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="right"
                    android:layout_row="2"
                    android:layout_column="0" />

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputLift"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    android:inputType="numberDecimal"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/demarrage_temperature"
                    android:id="@+id/textTemperature"
                    android:layout_gravity="right"
                    android:layout_row="3"
                    android:layout_column="0"
                    android:layout_marginRight="20dp"/>

                <EditText
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputTemperature"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_columnSpan="2"
                    android:inputType="number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/demarrage_validation"
                    android:id="@+id/textValidation"
                    android:layout_marginRight="20dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:layout_gravity="right"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkValidation"
                    android:enabled="true"
                    android:checked="false"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:layout_columnSpan="2" />

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:text="@string/demarage_pilote_validation" android:id="@+id/textPiloteValidation"
                          android:layout_gravity="center_vertical|right"
                          android:layout_marginRight="20dp" android:layout_row="5"
                          android:layout_column="0"/>
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/inputPiloteValidation" android:layout_row="5" android:layout_column="1"
                    android:layout_columnSpan="3"
                    android:inputType="textCapWords" />


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:textAppearance="?android:attr/textAppearanceMedium"
                          android:text="@string/demarage_horaires_site"
                          android:id="@+id/textHorairesSite"
                          android:layout_gravity="center_vertical|right"
                          android:layout_marginRight="20dp" android:layout_row="6"
                          android:layout_column="0"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demarrage_heure_holder"
                    android:id="@+id/buttonOuverture" android:layout_row="6" android:layout_column="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demarrage_heure_holder"
                    android:id="@+id/buttonFermeture" android:layout_row="6" android:layout_column="2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/demarrage_pasdevol"
                    android:id="@+id/textPasdeVol"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_gravity="right" android:layout_marginRight="20dp"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkPasdeVol"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:checked="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/demarrage_signature"
                    android:id="@+id/textSignature"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="20dp"
                    android:layout_row="8"
                    android:layout_column="0" />

                <ImageView
                    android:id="@+id/imageSignature"
                    android:layout_width="501dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="205dp"
                    android:layout_row="9"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"/>

                <com.aerophile.app.DrawView
                    android:id="@+id/canvasDrawer"
                    android:background="@drawable/background_draw"
                    android:layout_width="501dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_height="205dp"
                    android:layout_row="9"
                    android:layout_column="0"
                    android:layout_columnSpan="4"
                    android:layout_gravity="center_horizontal"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demarrage_effacer"
                    android:id="@+id/buttonEffacer"
                    android:layout_row="8"
                    android:layout_column="1"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="20dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/demarrage_debut_journee"
                    android:id="@+id/buttonSave"
                    android:layout_columnSpan="3"
                    android:layout_row="10"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal"
                    />

                <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:text="@string/demarrage_pdf" android:id="@+id/buttonPdf"
                        android:layout_column="2" android:layout_row="1"
                        android:layout_columnSpan="1"/>

            </GridLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
